<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<!--
    Q2.fxml defines the layout of the JavaFX application using a VBox.
    The layout contains a button at the top and a canvas below it for drawing.
    On each button click, the canvas is cleared and redrawn with a new random grid.
-->

<VBox prefHeight="600.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Q2Controller">

    <children>
        <!-- Button to trigger drawing -->
        <Button fx:id="but"
                alignment="TOP_LEFT"
                mnemonicParsing="false"
                onAction="#drawRectPressed"
                text="Draw Rect" />

        <!-- Canvas used for rendering the grid -->
        <Canvas fx:id="canv"
                width="600.0"
                height="600.0"
                VBox.vgrow="ALWAYS"/>
    </children>
</VBox>
